# fixes acceleration
input type:touchpad {
    dwt disabled
    middle_emulation disabled
    accel_profile "flat"
    pointer_accel 1
}
# disables caps lock
input type:keyboard {
  xkb_options caps:none
}

include rules
include visual

set {
    $mod Mod4
    $alt Mod1
    $left h
    $down j
    $up k
    $right l
    $term wezterm start
    $menu exec $term --class launcher -e env sway-launcher-desktop
    $trans 0.8
}
include appbinds

include startup

include swaybinds

include startup

bar {
	swaybar_command waybar
}
